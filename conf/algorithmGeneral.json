{
  "Algorithm Name":{
    "type":"string",
    "infoText":"Name of the algorithm",
    "minLength":2,
    "maxLength":50,
    "required":true,
    "regex": "^([a-z A-Z0-9]*)$"
  },
  "Description":{
    "type":"string",
    "infoText":"Description of what the algorithm performs",
    "minLength":5,
    "maxLength":255,
    "required":true,
    "multiline":true
  },
  "Contact Author":{
    "infoText":"Author of the method",
    "type":"string",
    "minLength":5,
    "maxLength":50,
    "required":true
  },
  "Affiliation":{
    "infoText":"Affiliation of the contact author",
    "type":"string",
    "minLength":3,
    "maxLength":125,
    "required":true
  },
  "email":{
    "infoText":"Contact email address",
    "type":"string",
    "format":"email",
    "required":true
  },
  "website":{
    "infoText":"Project website",
    "type":"string",
    "format":"uri",
    "required":false
  },
  "DOI":{
    "infoText":"DOI of a related paper to cite when using this method",
    "type":"string",
    "required":false
  },
  "purpose":{
    "infoText":"Purpose of this method",
    "type":"string",
    "required":false
  },
  "license":{
    "infoText":"License of this method",
    "type":"enum",
    "values":[
      "MIT",
      "Apache",
      "Other"
    ],
    "keys":[
      "MIT",
      "Apache",
      "Other"
    ],
    "required":true
  },
  "type":{
    "infoText":"Type of this method  (e.g. OCR, binarization,...)",
    "type":"string",
    "required":true
  }
}
