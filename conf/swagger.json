{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "DIVAServices",
    "description": "Providing Document Image Analysis algorithms as WebServices",
    "termsOfService": "http://divaservices.unifr.ch/tos",
    "contact": {
      "name": "Marcel WÃ¼rsch"
    },
    "license": {
      "name": "GPLv2.1"
    }
  },
  "host": "127.0.0.1",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/": {
      "get": {
        "description": "list all available methods",
        "operationId": "list",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "algorithms response",
            "schema": {
              "$ref": "http://$BASEURL$/schemas/general"
            }
          }
        }
      }
    },
    "/collections/{collection}": {
      "get": {
        "description": "Get information about a collection",
        "operationId": "collectionInfo",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "description": "name of the collection",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "collection information",
            "schema": {
              "$ref": "#/definitions/collectionInfo"
            }
          },
          "110": {
            "description": "collection still processing",
            "schema": {
              "$ref": "#/definitions/collectionInfo"
            }
          },
          "404":{
            "description": "collection does not exist",
            "schema":{
              
            }
          }
        }
      }
    },
    "/image/{collection}": {
      "get": {
        "description": "get images in a collection",
        "operationId": "imagesInCollection",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "collection",
            "in": "path",
            "description": "name of the collection",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "list of all images in the collection",
            "schema": {
              "$ref": "#/definitions/imageCollectionInfo"
            }
          }
        }
      }
    },
    "/image/results/{md5}": {
      "get": {
        "description": "list all avilable results for an image",
        "operationId": "checkImageResults",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "md5",
            "in": "path",
            "description": "md5 hash of the image",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "image results",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/imageResult"
              }
            }
          }
        }
      }
    },
    "/image/check/{md5}": {
      "get": {
        "description": "check if an image with a given md5 hash is available",
        "operationId": "checkImageMd5",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "md5",
            "in": "path",
            "description": "md5 hash of the image",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "information about the image availability",
            "schema": {
              "type": "object",
              "required": [
                "imageAvailable"
              ],
              "properties": {
                "imageAvailable": {
                  "type": "boolean"
                }
              }
            }
          }
        }
      }
    },
    "/upload": {
      "post": {
        "description": "Uploads an image to the server",
        "operationId": "addImage",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "images",
            "in": "body",
            "description": "Image to add on the server",
            "required": true,
            "schema": {
              "$ref": "#/definitions/images"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "upload response",
            "schema": {
              "$ref": "#/definitions/collection"
            }
          }
        }
      }
    },
    "/graph/graphextraction/1": {
      "get": {
        "description": "get method information",
        "produces": [
          "application/json"
        ],
        "parameters": [],
        "responses": {
          "200": {
            "description": "method information",
            "schema": {
              "$ref": "http://$BASEURL$/schemas/details"
            }
          }
        }
      },
      "post": {
        "description": "execute method",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "execution parameters",
            "in": "body",
            "description": "needed execution parameters",
            "required": true,
            "schema": {
              "$ref": "#/definitions/graphextraction"
            }
          }
        ],
        "responses": {
          "202": {
            "description": "start execution response",
            "schema": {
              "$ref": "#/definitions/startExecution"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "images": {
      "type":"object",
      "required": [
        "images"
      ],
      "properties": {
        "images":{
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/image"
          }
        }
      }
    },
    "image": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "type": "object",
          "required": [
            "type",
            "value"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "url",
                "image",
                "iiif"
              ]
            },
            "value": {
              "type": "string"
            }
          }
        }
      }
    },
    "collection": {
      "type": "object",
      "required": [
        "collection"
      ],
      "properties": {
        "collection": {
          "type": "string"
        }
      }
    },
    "collectionInfo": {
      "type": "object",
      "required": [
        "statusCode",
        "statusMessage",
        "percentage"
      ],
      "properties": {
        "statusCode": {
          "type": "integer",
          "enum": [
            110,
            200
          ]
        },
        "statusMessage": {
          "type": "string"
        },
        "percentage": {
          "type": "number"
        }
      }
    },
    "imageCollectionInfo": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/imageInCollection"
      }
    },
    "imageInCollection": {
      "type": "object",
      "required": [
        "image"
      ],
      "properties": {
        "image": {
          "type": "object",
          "required": [
            "md5",
            "url"
          ],
          "properties": {
            "md5": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    },
    "imageResult": {
      "type": "object",
      "required": [
        "resultLink",
        "method",
        "collectionName",
        "parameters"
      ],
      "properties": {
        "resultLink": {
          "type": "string",
          "format": "uri"
        },
        "method": {
          "type": "string"
        },
        "collectionName": {
          "type": "string"
        },
        "parameters": {
          "type": "object"
        }
      }
    },
    "inputImages": {
      "type": "array",
      "minItems": 1,
      "uniqueItems": false,
      "items": {
        "type": "object",
        "required": [
          "type",
          "value"
        ],
        "properties": {
          "type": {
            "enum": [
              "collection"
            ]
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "sauvolabinarizationinput": {
      "type": "object",
      "required": [
        "inputs",
        "highlighter",
        "images"
      ],
      "properties": {
        "inputs": {
          "type": "object"
        },
        "highlighter": {
          "type": "object"
        },
        "images": {
          "$ref": "#/definitions/inputImages"
        }
      }
    },
    "startExecution": {
      "type": "object",
      "required": [
        "results",
        "collection",
        "resultLink",
        "status",
        "statusCode"
      ],
      "properties": {
        "results": {
          "type": "array",
          "minItems": 1,
          "uniqueItems": true,
          "items": {
            "type": "object",
            "required": [
              "resultLink"
            ],
            "properties": {
              "resultLink": {
                "type": "string"
              }
            }
          }
        },
        "collection": {
          "type": "string"
        },
        "resultLink": {
          "type": "string",
          "format": "uri"
        },
        "status": {
          "type": "string"
        },
        "statusCode": {
          "type": "number"
        }
      }
    },
    "graphextraction": {
      "type": "object",
      "required": [
        "inputs",
        "highlighter",
        "images"
      ],
      "properties": {
        "inputs": {
          "type": "object",
          "required": [
            "InterestPointDetector"
          ],
          "properties": {
            "InterestPointDetector": {
              "type": "string",
              "enum": [
                "SCP",
                "CP",
                "Harris",
                "DOG"
              ],
              "default": "Harris"
            }
          }
        },
        "highlighter": {
          "type": "object"
        },
        "images": {
          "$ref": "#/definitions/inputImages"
        }
      }
    }
  }
}